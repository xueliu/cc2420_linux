/dts-v1/;
/plugin/;

/* Overlay for TI IEEE 802.15.4 WPAN transceiver on spi0.0 */

/ {
	compatible = "brcm,bcm2835", "brcm,bcm2836", "brcm,bcm2708", "brcm,bcm2709";

	fragment@0 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			status = "okay";

			cc2420: cc2420@0 {
				compatible = "ti,cc2420";
				pinctrl-names = "default";
				pinctrl-0 = <&cc2420_pins>;
				fifo-gpio = <&gpio 25 0>;
				fifop-gpio = <&gpio 24 0>;
				sfd-gpio = <&gpio 23 0>;
				cca-gpio = <&gpio 22 0>;
				reset-gpio = <&gpio 17 0>;
				vreg-gpio = <&gpio 31 0>;
				spi-max-frequency = <4000000>;
			};
		};
	};

	fragment@1 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@2 {
		target = <&gpio>;
		__overlay__ {
			cc2420_pins: cc2420_pins {
				brcm,pins = <17 31 22 23 24 25>;
				brcm,function = <1 1 0 0 0 0>; /* out out in in in in */
			};
		};
	};

	__overrides__ {
		interrupt = <&cc2420>, "interrupts:0",
			<&cc2420_pins>, "brcm,pins:0";
		reset     = <&cc2420>, "rst_b-gpio:4",
			<&cc2420_pins>, "brcm,pins:4";
		
		speed     = <&cc2420>, "spi-max-frequency:0";
	};
};
